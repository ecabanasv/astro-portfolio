---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div
    class:list={[
        "absolute inset-0 overflow-hidden pointer-events-none -z-10",
        className,
    ]}
    aria-hidden="true"
>
    <div
        class="absolute -left-20 top-0 h-72 w-72 rounded-full bg-primary/10 blur-3xl md:left-0 md:top-10 animate-pulse"
        style="animation-duration: 4s;"
    >
    </div>
    <div
        class="absolute -right-20 bottom-0 h-72 w-72 rounded-full bg-accent/10 blur-3xl animate-pulse"
        style="animation-duration: 5s; animation-delay: 1s;"
    >
    </div>
</div>
