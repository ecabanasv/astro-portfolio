---
import { projects } from "../data/projects";
---
<section id="projects" class="section container">
  <h2 class="mb-8">Projects & Demos</h2>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map(project => (
      <article class="card">
        <h3 class="text-xl">{project.title}</h3>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{project.description}</p>
        <p class="mt-3 text-xs text-gray-500">Stack: {project.stack}</p>
        {project.url && (
          <a
            href={project.url}
            target="_blank"
            rel="noopener"
            class="btn btn-outline mt-4 w-full justify-center sm:w-auto"
          >
            {project.ctaLabel ?? "Learn more"}
          </a>
        )}
      </article>
    ))}
  </div>
</section>
