---
import { skillCategories, certifications } from "../data/skills";
---
<section id="skills" class="container py-12">
  <h2 class="mb-4 text-2xl md:text-3xl font-semibold">Skills, Certifications & Education</h2>

  <div class="grid gap-8 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="space-y-4">
      <h3 class="text-lg font-semibold mb-3">Skills</h3>

      {skillCategories.map(category => (
        <details class="group rounded-xl border border-gray-200/70 bg-white/80 p-4 shadow-sm backdrop-blur transition dark:border-white/10 dark:bg-white/[0.05]" open>
          <summary class="flex cursor-pointer items-center justify-between gap-2 text-sm font-semibold text-gray-800 transition hover:text-blue-600 dark:text-white">
            <span>{category.title}</span>
            <svg class="h-4 w-4 text-gray-500 transition group-open:rotate-45" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M12 5v14M5 12h14"/></svg>
          </summary>
          <div class="mt-3 flex flex-wrap gap-2">
            {category.items.map(item => (
              <span class="chip">{item}</span>
            ))}
          </div>
        </details>
      ))}
    </div>

    <div class="space-y-4">
      <h3 class="text-lg font-semibold mb-3">Salesforce Certifications</h3>

      <ul class="grid gap-3 sm:grid-cols-2 xl:grid-cols-3 mb-4">
        {certifications.map(certification => (
          <li class="cert flex items-center gap-2 border border-blue-200/70 bg-blue-50/60 text-gray-800 shadow-sm backdrop-blur dark:border-white/15 dark:bg-white/[0.06] dark:text-white">
            <svg class="h-4 w-4 text-blue-600 dark:text-emerald-300" viewBox="0 0 20 20" fill="currentColor"><path d="M10.897 2.21a1 1 0 00-1.794 0l-1.519 3.7-3.916.304a1 1 0 00-.564 1.748l2.976 2.57-.892 3.84a1 1 0 001.482 1.095L10 13.347l3.53 2.12a1 1 0 001.482-1.095l-.892-3.84 2.976-2.57a1 1 0 00-.564-1.748l-3.916-.304-1.519-3.7z"/></svg>
            <div class="font-medium">{certification}</div>
          </li>
        ))}
      </ul>
      <div class="rounded-xl border border-gray-200/70 bg-white/80 p-4 text-sm text-gray-600 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/[0.05] dark:text-gray-200">
        Available for custom enablement sessions: AI pilot playbooks, integration blueprints, and agent experience reviews.
      </div>
    </div>
  </div>
</section>
