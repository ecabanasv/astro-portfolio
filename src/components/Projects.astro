---
import { projects } from "../data/projects";
---
<section id="portfolio" class="section container">
  <div class="flex items-center justify-between gap-4 flex-wrap">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-blue-700 dark:text-emerald-200">Portfolio</p>
      <h2 class="mt-2">Selected work</h2>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-400">Demos and mockups you can adapt for your own pilots.</p>
  </div>

  <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map(project => (
      <article class="card flex flex-col gap-4 transition-transform duration-200 hover:-translate-y-1 hover:shadow-xl">
        <div class="project-thumb">
          <div class="project-thumb__bar">
            <span class="project-thumb__dot"></span>
            <span class="project-thumb__dot"></span>
            <span class="project-thumb__dot"></span>
          </div>
          <div class="h-36 rounded-lg bg-gradient-to-br from-blue-500/15 via-white to-emerald-400/20 ring-1 ring-inset ring-white/60 dark:from-white/[0.08] dark:via-white/[0.03] dark:to-emerald-500/20 dark:ring-white/10">
          </div>
        </div>
        <div class="space-y-2">
          <h3 class="text-xl">{project.title}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">{project.description}</p>
          <div class="flex flex-wrap gap-2 pt-1">
            {project.stack.split(",").map(item => (
              <span class="chip">{item.trim()}</span>
            ))}
          </div>
        </div>
        {project.url && (
          <div class="mt-auto flex items-center gap-3 pt-2">
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary text-sm"
              aria-label={`Open ${project.title} in a new tab`}
            >
              {project.ctaLabel ?? "View demo"}
            </a>
            <a
              href="#contact"
              class="text-sm font-semibold text-gray-700 underline-offset-4 transition hover:underline dark:text-gray-200"
            >
              Book a walkthrough â†’
            </a>
          </div>
        )}
      </article>
    ))}
  </div>
</section>
