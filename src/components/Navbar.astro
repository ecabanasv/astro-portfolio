---
const links = [
  { href: "#about", label: "About" },
  { href: "#projects", label: "Projects" },
  { href: "#skills", label: "Skills" },
  { href: "#contact", label: "Contact" },
];
const navId = 'primary-navigation';
const navToggleId = 'primary-nav-toggle';
const scriptModule = import.meta.glob('../components/NavbarToggle.ts', {
  eager: true,
  import: 'default',
  query: '?url'
}) as Record<string, string>;
const navbarScript = scriptModule['../components/NavbarToggle.ts'];
---
<header
  class="sticky top-0 z-50 border-b border-gray-200 bg-white/80 backdrop-blur dark:border-gray-800 dark:bg-gray-950/80"
  data-nav-root
  data-nav-menu={navId}
  data-nav-toggle={navToggleId}
>
  <nav class="container flex h-14 items-center justify-between gap-4">
    <a href="/" class="font-semibold tracking-tight">demo-portfolio.example</a>
    <button
      type="button"
      id={navToggleId}
      class="inline-flex items-center gap-2 rounded-md border border-transparent px-3 py-2 text-sm font-medium md:hidden"
      aria-expanded="false"
      aria-controls={navId}
    >
      <span>Menu</span>
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M4 7h16" />
        <path d="M4 12h16" />
        <path d="M4 17h16" />
      </svg>
    </button>
    <div
      id={navId}
      class="flex w-full flex-col items-start gap-4 rounded-lg border border-gray-200 bg-white p-4 text-sm shadow-sm md:w-auto md:flex-row md:items-center md:gap-4 md:border-0 md:bg-transparent md:p-0 md:shadow-none dark:border-white/15 dark:bg-gray-900/90"
    >
      {links.map(link => (
        <a href={link.href} class="w-full rounded-md px-2 py-1 text-left text-gray-700 hover:bg-gray-50 hover:no-underline focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 dark:text-gray-100 dark:hover:bg-white/10 md:w-auto md:bg-transparent md:px-0 md:py-0 md:hover:bg-transparent md:hover:underline">
          {link.label}
        </a>
      ))}
    </div>
  </nav>
</header>
<script type="module" src={navbarScript} defer></script>
