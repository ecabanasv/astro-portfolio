---
import { certifications, skillCategories } from "../data/skills";
import { timeline } from "../data/timeline";
---
<section id="resume" class="section container relative overflow-hidden pb-12">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-900/25 via-blue-600/10 to-emerald-500/8 blur-3xl"></div>
  <div class="absolute top-6 right-10 -z-10 h-32 w-32 rounded-full bg-blue-500/15 blur-3xl"></div>

  <div class="flex items-start justify-between gap-3">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-blue-700 dark:text-emerald-200">Resume</p>
      <h2 class="mt-2 text-2xl md:text-3xl font-semibold">Snapshot</h2>
    </div>
  </div>

  <div class="mt-8 grid gap-8 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Experience</h3>
      <div class="space-y-4">
        {timeline.map(item => (
          <article class="rounded-2xl border border-white/20 bg-white/70 p-5 shadow-lg shadow-blue-500/10 backdrop-blur dark:border-white/10 dark:bg-white/[0.05]">
            <p class="text-xs font-semibold uppercase tracking-wide text-blue-700 dark:text-emerald-200">{item.period}</p>
            <h4 class="mt-2 text-xl font-semibold text-gray-900 dark:text-white">{item.title}</h4>
            <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">{item.description}</p>
            <div class="mt-3 flex flex-wrap gap-2">
              {item.highlights.map(highlight => (
                <span class="chip chip--nowrap">{highlight}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>

    <div class="space-y-5">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Education & Certs</h3>
        <ul class="mt-3 space-y-3">
          {certifications.map(cert => (
            <li class="rounded-2xl border border-white/20 bg-white/70 p-4 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/[0.05]">
              <div class="flex items-center gap-3">
                <span class="h-2.5 w-2.5 rounded-full bg-gradient-to-br from-blue-500 to-emerald-400 shadow-[0_0_0_6px_rgba(37,99,255,0.15)]"></span>
                <span class="text-sm font-medium text-gray-800 dark:text-white">{cert}</span>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <div class="mt-6 space-y-4">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Skills</h3>
    <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
      {skillCategories.map(category => (
        <div class="rounded-2xl border border-white/20 bg-white/70 p-4 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/[0.05]">
          <p class="text-sm font-semibold text-gray-800 dark:text-white">{category.title}</p>
          <div class="mt-2 flex flex-wrap gap-2">
            {category.items.map(item => (
              <span class="chip">{item}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
