---
import { Image } from '@astrojs/image/components';
import Layout from '../layouts/Layout.astro';
import llamaIllustration from '../assets/404-llama.svg';
---
<Layout title="404 Â· Page not found" description="We couldn't find the page you were looking for.">
  <section class="flex min-h-[80vh] flex-col items-center justify-center gap-8 text-center">
    <Image
      src={llamaIllustration}
      alt="A confused llama illustration indicating the page is missing"
      widths={[220, 330]}
      format="png"
      sizes="(min-width: 768px) 220px, 60vw"
      loading="lazy"
      class="mx-auto h-auto w-[min(220px,60vw)]"
    />
    <div class="space-y-3">
      <h1 class="text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">Oops, this cloud is empty.</h1>
      <p class="text-base text-gray-600 dark:text-gray-300">The page you're after has drifted away. Let's head back to where things make sense.</p>
    </div>
    <a href="/" class="btn btn-primary">Back to homepage</a>
  </section>
</Layout>
