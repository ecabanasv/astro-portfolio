---
import { certifications, skillCategories } from "../data/skills";
import { timeline } from "../data/timeline";
import Section from "./ui/Section.astro";
import Card from "./ui/Card.astro";
import Badge from "./ui/Badge.astro";
---

<Section id="resume" class="relative overflow-hidden">
  <!-- Background decoration -->
  <div
    class="absolute top-0 right-0 -z-10 h-[500px] w-[500px] rounded-full bg-primary/5 blur-3xl"
  >
  </div>

  <div class="mb-12">
    <span class="text-xs font-bold uppercase tracking-widest text-primary"
      >Resume</span
    >
    <h2 class="mt-2 text-3xl md:text-4xl font-bold">Snapshot</h2>
  </div>

  <div class="grid gap-12 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="space-y-8">
      <h3 class="text-2xl font-bold">Experience</h3>
      <div class="space-y-6">
        {
          timeline.map((item) => (
            <Card class="p-6 relative overflow-hidden group">
              <div class="absolute top-0 left-0 w-1 h-full bg-primary/50 group-hover:bg-primary transition-colors" />
              <span class="text-xs font-bold uppercase tracking-wide text-primary">
                {item.period}
              </span>
              <h4 class="mt-1 text-xl font-bold">{item.title}</h4>
              <p class="mt-3 text-text-muted leading-relaxed">
                {item.description}
              </p>
              <div class="mt-4 flex flex-wrap gap-2">
                {item.highlights.map((highlight) => (
                  <Badge variant="secondary" class="text-xs">
                    {highlight}
                  </Badge>
                ))}
              </div>
            </Card>
          ))
        }
      </div>
    </div>

    <div class="space-y-10">
      <div>
        <h3 class="text-2xl font-bold mb-6">Education & Certs</h3>
        <ul class="space-y-3">
          {
            certifications.map((cert) => (
              <li class="flex items-center gap-3 rounded-lg border border-border bg-surface/50 p-3 text-sm font-medium">
                <span class="h-2 w-2 rounded-full bg-accent shadow-[0_0_0_4px_rgba(var(--color-accent),0.2)]" />
                {cert}
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-2xl font-bold mb-6">Skills</h3>
        <div class="space-y-4">
          {
            skillCategories.map((category) => (
              <Card class="p-5 bg-surface/50">
                <p class="font-bold mb-3">{category.title}</p>
                <div class="flex flex-wrap gap-2">
                  {category.items.map((item) => (
                    <Badge variant="outline" class="bg-background">
                      {item}
                    </Badge>
                  ))}
                </div>
              </Card>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</Section>
