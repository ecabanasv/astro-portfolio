---
import { hero } from "../data/hero";
import Section from "./ui/Section.astro";
import Card from "./ui/Card.astro";
import Badge from "./ui/Badge.astro";

const areas = [
  {
    title: "Service journeys",
    description:
      "Prepare personas, routes, and agent UI flows to validate end-to-end experience.",
  },
  {
    title: "AI copilots",
    description:
      "Draft triage, summarize, and reply helpers you can swap for your own models.",
  },
  {
    title: "Dashboards",
    description:
      "Curate KPIs and alerts that help stakeholders read adoption and quality quickly.",
  },
  {
    title: "Integrations",
    description:
      "Show webhooks, APIs, and data syncs that tie CRM, knowledge, and chat together.",
  },
];
---

<Section aria-labelledby="about-more">
  <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr]">
    <div class="space-y-6">
      <div class="space-y-2">
        <span class="text-xs font-bold uppercase tracking-widest text-primary"
          >About me</span
        >
        <h2 id="about-more" class="text-3xl md:text-4xl font-bold">
          Clear demos for quick decisions
        </h2>
      </div>

      <p class="text-lg text-text-muted leading-relaxed">
        {hero.description}
      </p>

      <div class="flex flex-wrap gap-2">
        {
          hero.highlights.map((item) => (
            <Badge variant="secondary" class="px-3 py-1 text-sm">
              {item}
            </Badge>
          ))
        }
      </div>
    </div>

    <div class="space-y-6">
      <h3 class="text-xl font-bold">What I'm doing</h3>
      <div class="grid gap-4 sm:grid-cols-2">
        {
          areas.map((area) => (
            <Card class="p-5 h-full hover:border-primary/50 transition-colors">
              <h4 class="font-bold text-lg mb-2">{area.title}</h4>
              <p class="text-sm text-text-muted">{area.description}</p>
            </Card>
          ))
        }
      </div>
    </div>
  </div>
</Section>
