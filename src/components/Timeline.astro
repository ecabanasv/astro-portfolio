---
import { timeline } from "../data/timeline";
---
<section id="experience" class="section container">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-blue-700 dark:text-emerald-200">Experience</p>
      <h2 class="mt-2 text-2xl md:text-3xl font-semibold">Where this template fits</h2>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-300 max-w-lg">Use these milestones as placeholdersâ€”swap with your own roles, clients, or internal initiatives.</p>
  </div>

  <div class="mt-10 space-y-6">
    {timeline.map(item => (
      <article class="relative rounded-2xl border border-white/50 bg-white/80 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/[0.05]">
        <div class="absolute -left-3 top-6 h-2 w-2 rounded-full bg-gradient-to-br from-blue-500 to-emerald-400 shadow-[0_0_0_6px_rgba(37,99,255,0.12)]"></div>
        <div class="flex flex-wrap items-center gap-3 text-xs font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-300">
          <span class="chip chip--nowrap">{item.period}</span>
          <span class="text-gray-400 dark:text-gray-500">Track</span>
        </div>
        <h3 class="mt-3 text-xl">{item.title}</h3>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{item.description}</p>
        <div class="mt-3 flex flex-wrap gap-2">
          {item.highlights.map(highlight => (
            <span class="chip">{highlight}</span>
          ))}
        </div>
      </article>
    ))}
  </div>
</section>
